<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
  <h1> Scissors</h1>
  <div class="container">
  <form action="/shortUrls"  method="POST" class="my-4 form-inline">
    <label for="originalurl" class="sr-only"></label>
    <input type="url" required placeholder="Url" name="originalurl" id="originalurl" class="form-control col mr-2">
    <button type="submit" class = "btn btn-success">Shorten</button>
  </form>

  <table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Original URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
        </tr>
    </thead>
    <tbody>
      <%  ShortUrls.forEach( ShortUrls => { %>
        <tr>
          <td><a href="<%= ShortUrls.original %>"><%= ShortUrls.original %></a></td>
          <td><a href="<%= ShortUrls.short %>"><%= ShortUrls.short %></a></td>
          <td><%= ShortUrls.clicks %></td>
      </tr>

      <% }) %>
        
    </tbody>
  </table>
</div>

</body>
</html>